<h4>Holidays by Month</h4>
<table>
    <thead>
        <tr>
            <th>Month</th>
            <th>Holidays</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var group in GroupedHolidays)
        {
            <tr>
                <td>@group.Key</td>
                <td>
                    <!-- Use a nested table to display the list of holidays -->
                    <table>
                        <thead>
                            <tr>
                                <th>Date</th>
                                <th>Name</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var holiday in group.Value) 
                            {
                                <tr>
                                    <td>@holiday.Date?.ToShortDateString()</td>
                                    <td>@GetTranslatedHolidayName(holiday.Name)</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </td>
            </tr>
        }
    </tbody>
</table>

